<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<configuration
        xmlns="http://www.jooq.org/xsd/jooq-codegen-3.13.0.xsd">
    <jdbc>
        <driver>org.sqlite.JDBC</driver>
        <url>jdbc:sqlite:db/task.db</url>
    </jdbc>

    <generator>
        <name>org.jooq.codegen.JavaGenerator</name>
        <database>
            <name>org.jooq.util.sqlite.SQLiteDatabas</name>
            <inputSchema>public</inputSchema>
            <includes>.*</includes>
            <excludes></excludes>
        </database>

        <target>
            <packageName>al.bruno.task.organiser.model</packageName>
            <directory>/Users/bruno/projects/TaskOrganiser/src/main/java</directory>
        </target>
    </generator>
</configuration>